@model ReflectionIT.Mvc.Paging.PagingList<Tarea7.Models.Empleado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string titulo = "Listado de Empleados";
    ViewData["Title"] = titulo;
}

<h3>@titulo</h3>

<div>
    <form method="get" class="form-inline" asp-action="Index">
        <input name="filter" class="form-control" placeholder="Filtro"
               value="@Model.RouteValue["Filter"]" />
        <button type="submit" class="btn  btn-default">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar
        </button>

        <a asp-controller="Empleados" asp-action="Create" class="btn btn-primary btn-sm pull-right">
            Crear Empleado
        </a>
    </form>
</div>
<br />
<div class="box box-info">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.SortableHeaderFor(model => model.Codigo)
                </th>
                <th>
                    @Html.SortableHeaderFor(model => model.Nombre)
                </th>
                <th>
                    @Html.SortableHeaderFor(model => model.Apellido)
                </th>
                <th>
                    @Html.SortableHeaderFor(model => model.SalrioMensual)
                </th>
                <th>
                    @Html.SortableHeaderFor(model => model.Telefono)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalrioMensual)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        <a href="/Empleados/Details?id=@item.Codigo"><i class="fa fa-info-circle"></i></a> |
                        <a href="/Empleados/Edit?id=@item.Codigo"><i class="fa fa-edit"></i></a> |
                        <a href="/Empleados/Delete?id=@item.Codigo"><i class="fas fa-minus-circle"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Roles navigation example">
        <vc:pager paging-list="@Model" />
    </nav>
</div>

